<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Add_RepairActivity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/linear_header"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorGreen">

            <ImageView
                android:id="@+id/img_head_addrepair"
                android:layout_width="@dimen/scal_25dp"
                android:layout_height="wrap_content"
                android:src="@drawable/back_arrow"
                android:layout_marginLeft="@dimen/scal_20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back_arrow"
                android:layout_marginBottom="@dimen/scal_20dp"
                android:text="@string/add_repair_contact"
                android:textColor="@color/colorWhite"
                android:textSize="18dp"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/scal_20dp"
        android:layout_below="@+id/linear_header"
        android:orientation="vertical"
        tools:context=".LandLord.repair_fragment_files.Add_RepairActivity">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/scal_10dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/scal_20dp"
                android:layout_height="@dimen/scal_20dp"
                android:src="@mipmap/name"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/nameedittext"
                android:singleLine="true"
                android:inputType="textPersonName"
                android:nextFocusDown="@+id/contact_text"
                android:layout_marginLeft="@dimen/scal_20dp"
                android:background="@android:color/transparent"
                android:hint="Name"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/gray_background"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/scal_30dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/scal_20dp"
                android:layout_height="@dimen/scal_20dp"
                android:src="@mipmap/phone"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/contact_text"
                android:singleLine="true"
                android:inputType="number"
                android:nextFocusDown="@+id/email_text"
                android:layout_marginLeft="@dimen/scal_20dp"
                android:background="@android:color/transparent"
                android:hint="Contact Number"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/gray_background"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/scal_30dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/scal_20dp"
                android:layout_height="@dimen/scal_20dp"
                android:src="@mipmap/mail"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/email_text"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:nextFocusDown="@+id/types_of_repairs"
                android:layout_marginLeft="@dimen/scal_20dp"
                android:background="@android:color/transparent"
                android:hint="Email id"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/gray_background"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/scal_30dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/scal_20dp"
                android:layout_height="@dimen/scal_20dp"
                android:src="@mipmap/fan"/>
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dialog"
                android:layout_marginLeft="@dimen/scal_20dp"
                android:id="@+id/types_of_repairs"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/gray_background"
            />

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:textSize="@dimen/scal_20dp"
        android:textAllCaps="false"
        android:id="@+id/add_repair_save_button"
        android:textColor="@color/colorWhite"
        android:layout_marginLeft="@dimen/scal_20dp"
        android:layout_marginRight="@dimen/scal_20dp"
        android:layout_marginBottom="@dimen/scal_40dp"
        android:background="@drawable/ract_button"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>