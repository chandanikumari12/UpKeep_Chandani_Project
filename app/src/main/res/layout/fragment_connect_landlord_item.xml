<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/linearlist_connect"
    android:padding="16dp"
    android:layout_margin="5sp"
    android:weightSum="1"
    android:background="@drawable/repair_layout"
    android:gravity="center_vertical"
    android:orientation="horizontal">
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/relative_grpimg"
        android:layout_weight="0.15"
        android:visibility="visible"
        android:background="@drawable/message_layout">
        <ImageView
            android:layout_width="@dimen/scal_40dp"
            android:src="@mipmap/fan"
            android:id="@+id/world_image"
            android:layout_centerInParent="true"
            android:visibility="visible"
            android:layout_height="@dimen/scal_40dp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/scal_5dp"
        android:layout_weight="0.75"

        android:orientation="vertical">
        <TextView
            android:id="@+id/id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorGreen"
            android:textSize="16dp"
            android:text="Arbutus Infotech Software"
            />

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textColor="@color/colorBrown"
            android:text="MZ-5 Bansi trade center indore"  />
    </LinearLayout>
    <ImageView
        android:id="@+id/click_circle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/scal_5dp"
        android:layout_weight="0.1"
        android:src="@mipmap/click_circle"/>
</LinearLayout>
