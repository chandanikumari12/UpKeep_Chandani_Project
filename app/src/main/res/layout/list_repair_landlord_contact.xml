<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:weightSum="2"
    android:paddingBottom="@dimen/scal_10dp"
    android:paddingTop="@dimen/scal_10dp"
    android:id="@+id/linearlayout_repair_contact"
    android:layout_gravity="center_horizontal"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/fan_icon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:src="@mipmap/fan_gray" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/username"
        android:layout_weight="1.6"
        android:textSize="@dimen/scal_18dp"
        android:layout_marginRight="@dimen/scal_10dp"
        android:text="Mickey"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.03"
        android:src="@mipmap/mail_filled"
        android:layout_marginRight="@dimen/scal_10dp"
        android:id="@+id/chat_icon"
        />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.03"
        android:src="@mipmap/chat_message"
        android:layout_marginRight="@dimen/scal_10dp"
        android:visibility="gone"
        android:id="@+id/chat_message_icon"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/phone_green"
        android:id="@+id/phone_icon"
        android:layout_weight="0.03"
        />
</LinearLayout>
</LinearLayout>