<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.wel.upkeep.Repair_COntact_listActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/linear_header"
        android:layout_height="wrap_content">
        <include layout="@layout/header_menu"/>
    </LinearLayout>
<android.support.v7.widget.RecyclerView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@+id/footer_layout"
    android:layout_below="@+id/linear_header"
        android:id="@+id/recyclerview_repair_contact"/>

    <ImageView
        android:id="@+id/cir_plus"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_add_white_24dp"
        android:padding="5dp"
        android:layout_above="@+id/footer_layout"
        android:background="@drawable/circle_plus"
        android:layout_marginBottom="@dimen/scal_20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/footer_layout"
    android:layout_alignParentBottom="true">
    <include layout="@layout/footer_menu"/>
</LinearLayout>
</RelativeLayout>
