<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/scal_60dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="1">
        <ImageView
            android:id="@+id/pay_back_img"
            android:layout_width="@dimen/scal_25dp"
            android:layout_height="@dimen/scal_25dp"
            android:src="@drawable/back_arrow"
            android:tint="@color/colorGray"
            android:layout_weight="0.2"/>
        <LinearLayout
            android:id="@+id/lin_arbutus_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.6"
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Abutus Infotech Software"
                android:textColor="@color/colorGreen"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mz-5 Bansi trade center indore"
                android:textColor="@color/colorBrown"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="0.2"
            android:orientation="vertical"
            android:layout_width="@dimen/scal_25dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="@dimen/scal_5dp"
            android:background="@drawable/completed_rac">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="April"
                android:textColor="@color/colorWhite"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018"
                android:textColor="@color/colorWhite"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow"
                />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="@color/colorGray"/>

</LinearLayout>